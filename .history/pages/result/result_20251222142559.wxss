.result-page {
  min-height: 100vh;
  background: #333; /* 暗色背景突出老虎机 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

/* 老虎机样式 */
.slot-machine-container {
  background: #FF6B6B;
  padding: 40rpx;
  border-radius: 40rpx;
  border: 10rpx solid #E53935;
  width: 90%;
  text-align: center;
}
.slot-window {
  background: #fff;
  border-radius: 20rpx;
  height: 200rpx;
  display: flex;
  overflow: hidden;
  border: 6rpx solid #333;
}
.slot-col {
  flex: 1;
  border-right: 2rpx solid #eee;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 80rpx;
}
.slot-col:last-child { border: none; }

/* 简单的无限滚动动画 */
.slot-items-wrapper { display: flex; flex-direction: column; }
@keyframes spin {
  0% { transform: translateY(0); }
  100% { transform: translateY(-300rpx); } /* 假设有4个元素高度 */
}
.spin-anim-1 { animation: spin 0.3s linear infinite; }
.spin-anim-2 { animation: spin 0.4s linear infinite; }
.spin-anim-3 { animation: spin 0.5s linear infinite; }

.slot-text {
  color: #fff;
  margin-top: 30rpx;
  font-weight: bold;
  animation: blink 1s infinite;
}
@keyframes blink { 50% { opacity: 0.5; } }


/* 小票样式 */
.receipt-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.receipt {
  background: #fff;
  width: 90%;
  position: relative;
  filter: drop-shadow(0 10rpx 10rpx rgba(0,0,0,0.2));
  margin-bottom: 40rpx;
}

/* 纯CSS锯齿 */
.jagged-top {
  height: 20rpx;
  width: 100%;
  background-image: linear-gradient(135deg, #fff 50%, transparent 50%), linear-gradient(225deg, #fff 50%, transparent 50%);
  background-position: top left, top right;
  background-size: 40rpx 40rpx;
  background-repeat: repeat-x;
  position: absolute;
  top: -20rpx;
}
.jagged-bottom {
  height: 20rpx;
  width: 100%;
  background-image: linear-gradient(45deg, #fff 50%, transparent 50%), linear-gradient(-45deg, #fff 50%, transparent 50%);
  background-position: bottom left, bottom right;
  background-size: 40rpx 40rpx;
  background-repeat: repeat-x;
  position: absolute;
  bottom: -20rpx;
}

.receipt-content { padding: 40rpx; font-family: 'Courier New', Courier, monospace; }

.receipt-header { text-align: center; margin-bottom: 20rpx; }
.brand { font-size: 40rpx; font-weight: 900; display: block; }
.divider.dashed { border-bottom: 4rpx dashed #ccc; margin: 30rpx 0; }

.suggestion-title { font-size: 36rpx; font-weight: bold; display: block; margin-bottom: 10rpx; }
.detail-row { display: flex; margin-bottom: 20rpx; }
.label { width: 140rpx; color: #888; }
.value { flex: 1; font-weight: bold; }
.value.highlight { color: #FF6B6B; }

.reason-box { background: #FFF8E7; padding: 20rpx; border-radius: 10rpx; margin-top: 20rpx; }
.reason-label { display: block; font-size: 24rpx; color: #aaa; margin-bottom: 10rpx; }
.reason-text { font-size: 26rpx; line-height: 1.4; color: #555; }

.tags-row { margin-top: 20rpx; display: flex; gap: 10rpx; flex-wrap: wrap; }
.tag { font-size: 22rpx; background: #eee; padding: 5rpx 15rpx; border-radius: 8rpx; color: #666; }

.barcode { font-family: 'Libre Barcode 39', sans-serif; font-size: 40rpx; text-align: center; letter-spacing: 4rpx; margin-top: 30rpx; opacity: 0.7; }
.footer-msg { text-align: center; display: block; font-size: 24rpx; margin-top: 10rpx; color: #888; }

.action-area { width: 90%; display: flex; flex-direction: column; gap: 20rpx; }
.reroll-btn { background: #333; color: #fff; border-radius: 50rpx; }
.share-btn { background: #FF6B6B; color: #fff; border-radius: 50rpx; }