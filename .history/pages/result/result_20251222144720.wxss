.result-page {
  min-height: 100vh;
  background: #2C3E50; /* 深色背景衬托发光 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  overflow: hidden;
}

/* --- 老虎机 --- */
.slot-machine-wrapper {
  width: 100%; max-width: 600rpx;
  animation: bounceIn 0.5s;
}

.machine-roof {
  background: #D32F2F; height: 60rpx;
  border-radius: 30rpx 30rpx 0 0;
  border: 6rpx solid #000; border-bottom: none;
  display: flex; justify-content: space-around; align-items: center;
}
.light { width: 20rpx; height: 20rpx; background: #FFEB3B; border-radius: 50%; animation: blink 0.5s infinite alternate; }

.machine-body {
  background: #FF5252;
  border: 6rpx solid #000;
  border-radius: 0 0 30rpx 30rpx;
  padding: 40rpx;
  box-shadow: 10rpx 10rpx 0 rgba(0,0,0,0.5);
}

.screen-frame {
  background: #333; padding: 20rpx; border-radius: 20rpx;
  box-shadow: inset 0 0 20rpx #000;
}

.reel-container {
  display: flex; gap: 10rpx; height: 180rpx; overflow: hidden;
  position: relative; background: #fff; border-radius: 10rpx;
}

.reel { flex: 1; overflow: hidden; position: relative; }
.reel-inner { display: flex; flex-direction: column; font-size: 80rpx; line-height: 180rpx; text-align: center; }

/* 动态模糊滚动 */
.blur-spin {
  animation: scrollAnim linear infinite;
  filter: blur(4px); /* 速度感模糊 */
}
@keyframes scrollAnim {
  0% { transform: translateY(0); }
  100% { transform: translateY(-75%); } /* 滚动距离 */
}

.glass-glare {
  position: absolute; top: 0; left: 0; width: 100%; height: 50%;
  background: linear-gradient(to bottom, rgba(255,255,255,0.4), rgba(255,255,255,0));
  pointer-events: none;
}

.machine-label { text-align: center; color: #7f0000; font-weight: 900; margin-top: 20rpx; font-size: 36rpx; letter-spacing: 4rpx; }
.loading-text { color: #fff; margin-top: 40rpx; font-family: monospace; animation: pulse 1s infinite; }

/* --- 小票 --- */
.receipt-scene { width: 100%; display: flex; flex-direction: column; align-items: center; opacity: 0; transform: translateY(100rpx); }
.receipt-scene.enter { animation: slideUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards; }

@keyframes slideUp { to { opacity: 1; transform: translateY(0); } }

.receipt-paper {
  background: #fff; width: 95%; position: relative;
  filter: drop-shadow(0 20rpx 30rpx rgba(0,0,0,0.3));
  margin-bottom: 50rpx;
}

/* 锯齿生成器 */
.sawtooth-top {
  height: 16rpx; width: 100%; position: absolute; top: -16rpx;
  background-image: radial-gradient(circle, transparent 70%, #fff 75%);
  background-size: 32rpx 32rpx; background-position: -16rpx 16rpx;
}
.sawtooth-bottom {
  height: 16rpx; width: 100%; position: absolute; bottom: -16rpx;
  background-image: radial-gradient(circle, #fff 70%, transparent 75%);
  background-size: 32rpx 32rpx; background-position: -16rpx -16rpx;
}

.receipt-body { padding: 40rpx; color: #333; font-family: 'Courier New', monospace; }
.r-header { text-align: center; margin-bottom: 20rpx; }
.r-title { font-size: 40rpx; font-weight: 900; display: block; }
.r-date { font-size: 24rpx; color: #888; }
.r-divider { text-align: center; color: #ddd; overflow: hidden; white-space: nowrap; margin: 20rpx 0; letter-spacing: 6rpx; }

.r-main { text-align: center; margin: 40rpx 0; }
.plan-name { font-size: 44rpx; font-weight: bold; line-height: 1.3; margin-bottom: 10rpx; display: block; }
.stars { color: #FF6B6B; letter-spacing: 10rpx; }

.r-kv { font-size: 28rpx; }
.kv-row { display: flex; margin-bottom: 16rpx; }
.k { width: 120rpx; color: #999; font-weight: bold; }
.v { flex: 1; font-weight: bold; }
.highlight { color: #E91E63; background: #FCE4EC; padding: 4rpx 10rpx; border-radius: 8rpx; }

.r-box { background: #FFF3E0; padding: 20rpx; border-radius: 12rpx; border: 2rpx dashed #FFB74D; margin-top: 30rpx; }
.box-label { font-size: 24rpx; color: #F57C00; display: block; margin-bottom: 8rpx; font-weight: bold; }
.box-content { font-size: 26rpx; line-height: 1.5; color: #5D4037; }

.r-tags { margin-top: 30rpx; display: flex; flex-wrap: wrap; gap: 10rpx; }
.r-tag { font-size: 22rpx; border: 2rpx solid #333; padding: 4rpx 16rpx; border-radius: 30rpx; }

.r-footer { text-align: center; margin-top: 20rpx; opacity: 0.6; }
.barcode { font-family: sans-serif; font-size: 32rpx; letter-spacing: 4rpx; transform: scaleY(1.5); display: block; margin-bottom: 10rpx; }

.action-dock { width: 100%; display: flex; gap: 20rpx; }
.handle-btn {
  flex: 1; border-radius: 50rpx; font-size: 28rpx; font-weight: bold;
  height: 90rpx; line-height: 90rpx;
  border: 4rpx solid #333; box-shadow: 6rpx 6rpx 0 rgba(0,0,0,0.2);
}
.reroll { background: #fff; color: #333; }
.share { background: #FF6B6B; color: #fff; }