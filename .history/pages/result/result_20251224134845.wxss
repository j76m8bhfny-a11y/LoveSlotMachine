  0% { opacity: 0.6; box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.3); transform: scale(0.98); }
  100% { opacity: 1; box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.8), 0 0 50rpx rgba(255, 0, 255, 0.5); transform: scale(1.02); }
