.home-container {
  height: 100vh;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.entrance-card {
  flex: 1;
  border-radius: 50rpx;
  position: relative;
  border: 6rpx solid #333;
  box-shadow: 12rpx 12rpx 0rpx rgba(0,0,0,0.2);
  overflow: hidden;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.hover-card {
  transform: scale(0.98) translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0rpx rgba(0,0,0,0.2);
}

/* Play Card 样式 */
.play-card {
  background: linear-gradient(135deg, #FF9AA2 0%, #FFB7B2 100%);
}

.chat-card {
  background: linear-gradient(135deg, #F5F5F5 0%, #E0E0E0 100%);
}

.content-wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
  position: relative;
}

.grayscale { filter: grayscale(100%) opacity(0.7); }

.main-emoji { font-size: 100rpx; }

.text-group { text-align: center; margin-top: 20rpx; color: #333; }
.title { display: block; font-size: 56rpx; font-weight: 900; -webkit-text-stroke: 2rpx #fff; }
.subtitle { font-size: 28rpx; font-weight: bold; opacity: 0.8; margin-top: 10rpx; color: #444; }

.go-badge {
  position: absolute;
  bottom: 40rpx; right: 40rpx;
  background: #FFF; color: #FF6B6B;
  padding: 10rpx 40rpx;
  border-radius: 40rpx; border: 4rpx solid #333;
  font-weight: 900; font-size: 32rpx;
  box-shadow: 6rpx 6rpx 0rpx rgba(0,0,0,0.1);
}

/* 施工封条 */
.construction-tape {
  position: absolute; top: 40rpx; right: -80rpx;
  background: #FFD700; border: 4rpx solid #333;
  width: 400rpx; text-align: center;
  transform: rotate(45deg);
  font-weight: bold; font-size: 24rpx;
  padding: 10rpx 0; z-index: 20;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

/* 动画 */
.bg-decoration { position: absolute; font-size: 60rpx; opacity: 0.8; }
.cloud-1 { top: 10%; left: 10%; animation: float 6s ease-in-out infinite; }
.cloud-2 { top: 20%; right: 10%; animation: float 8s ease-in-out infinite reverse; }

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}