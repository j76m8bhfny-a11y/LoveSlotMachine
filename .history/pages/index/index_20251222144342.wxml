<view class="home-container">
  
  <!-- 上半部分：约会游玩 (Entrance) -->
  <view class="entrance-card play-card" bindtap="goToPlanner" hover-class="hover-card">
    <view class="bg-decoration cloud-1">☁️</view>
    <view class="bg-decoration cloud-2">☁️</view>
    
    <view class="content-wrapper">
      <view class="anim-wrapper run-anim">
        <!-- 这里可以用 Image 替换 Emoji 以获得更好效果 -->
        <text class="main-emoji">🏃💨💕</text>
      </view>
      <view class="text-group">
        <text class="title">带Ta去哪玩？</text>
        <text class="subtitle">生成今日份心动方案</text>
      </view>
      <view class="go-badge">GO!</view>
    </view>
  </view>

  <!-- 下半部分：聊天话题 (WIP) -->
  <view class="entrance-card chat-card" bindtap="showBuildingToast" hover-class="hover-card">
    <view class="construction-tape">
      <text>🚧 施工中 WIP 🚧</text>
    </view>
    <view class="content-wrapper grayscale">
      <view class="anim-wrapper float-anim">
        <text class="main-emoji">🛋️💬🍿</text>
      </view>
      <view class="text-group">
        <text class="title">聊点什么好？</text>
        <text class="subtitle">告别尴尬，拒绝查户口</text>
      </view>
    </view>
  </view>

</view>