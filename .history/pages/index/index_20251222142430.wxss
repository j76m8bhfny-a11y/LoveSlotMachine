.home-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 20rpx;
}

.card {
  flex: 1;
  border-radius: 40rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  transition: all 0.2s ease;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
}

.play-card {
  background: linear-gradient(135deg, #FF9AA2 0%, #FFB7B2 100%);
}

.chat-card {
  background: linear-gradient(135deg, #E2E2E2 0%, #F5F5F5 100%);
  /* 灰度处理 */
  filter: grayscale(0.8); 
  opacity: 0.9;
}

.card-content {
  text-align: center;
  z-index: 2;
}

.emoji-scene {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.action-btn {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  background: #fff;
  color: #FF9AA2;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.construction-tape {
  position: absolute;
  top: 30rpx;
  right: -50rpx;
  background: #FFD700;
  color: #333;
  font-size: 24rpx;
  padding: 10rpx 60rpx;
  transform: rotate(45deg);
  font-weight: bold;
  z-index: 10;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.2);
}