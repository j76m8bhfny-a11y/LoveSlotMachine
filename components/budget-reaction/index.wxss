.reaction-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 220rpx; /* 给足够的高度展示动画 */
  overflow: visible;
}

.emoji {
  font-size: 120rpx; /* 超大表情 */
  line-height: 1.2;
  filter: drop-shadow(0 4rpx 0px rgba(0,0,0,0.1)); /* 增加一点立体感 */
  transform-origin: center bottom; /* 从底部开始弹跳 */
}

.text-bubble {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #555;
  background: rgba(255,255,255,0.8);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #eee;
}

/* --- 核心动画: 果冻弹跳 (Pop) --- */
.pop {
  animation: jelly 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
}

@keyframes jelly {
  0% { transform: scale(1); }
  30% { transform: scale(1.25, 0.75); } /* 压扁 */
  40% { transform: scale(0.75, 1.25); } /* 拉长 */
  50% { transform: scale(1.15, 0.85); } /* 稍微压扁 */
  65% { transform: scale(0.95, 1.05); } /* 稍微拉长 */
  75% { transform: scale(1.05, 0.95); } /* 微调 */
  100% { transform: scale(1); } /* 恢复 */
}